<div class="container">
  <h4>商品編集</h4>
  <div class="row">
    
    <div class="col-8 offset-2 mb-5">
      <%= form_with model: @item, url: admin_item_path, local: true do |f| %>
      <div class="form-group">
        <%= f.label :商品画像 %>
        <%= f.file_field :image, accept: "image/*" %>
      </div>
      <div class="form-group">
        <%= f.label :商品名 %>
        <%= f.text_field :name %>
      </div>
      <div class="form-group">
        <%= f.label :商品説明 %>
        <%= f.text_area :introduction %>
      </div>
      <div class="form-group">
        <%= f.label :ジャンル %>
        <%= f.collection_select :genre_id, Genre.all, :id, :name, :prompt => "--選択してください--", class: "form-select" %>
      </div>
      <div class="form-group">
        <%= f.label :税抜価格 %>
        <%= f.text_field :price %>円
      </div>
      <div class="form-group">
        <%= f.label :販売ステータス %>
        <%= f.radio_button :is_active, true %>
        <%= f.label :is_active, "販売中" %>
        <%= f.radio_button :is_active, false %>
        <%= f.label :is_active, "販売停止中"  %>
      </div>
      <div class="form-action d-flex justify-content-around">
        <%= f.submit "変更を保存", class: "btn btn-success" %>
      </div>
      <% end %>
    </div>
  </div>
</div>