<div class="container">
  <h4 class="my-5">商品新規登録</h4>
  <div class="row">
    <div class="text-center col-12 md-6">
      <%= form_with model: @item, url: admin_items_path, local: true do |f| %>
      <div class="form-group">
        <%= f.label :image_id, "商品画像" %>
        <%= f.file_field :image_id, accept: "image/*" %>
      </div>
      <div class="form-group">
        <%= f.label :name, "商品名" %>
        <%= f.text_field :name, :placeholder => "商品名" %>
      </div>
      <div class="form-group">
        <%= f.label :introduction, "商品説明" %>
        <%= f.text_area :introduction, :placeholder => "ここに説明文を記述します" %>
      </div>
      <div class="form-group">
        <%= f.label :genre_id, "ジャンル" %>
        <%= f.select :genre_id, [["ケーキ",1], ["キャンディ",2],["焼き菓子",3]], include_blank: "--選択して下さい--" %>
      </div>
      <div class="form-group">
        <%= f.label :price, "税込価格" %>
        <%= f.text_field :price, :placeholder => "1000" %>円
      </div>
      <div class="form-group">
        <%= f.label :is_active, "販売ステータス" %>
        <%= f.radio_button :is_active, true %>
        <%= f.label :is_active, "販売中" %>
        <%= f.radio_button :is_active, false %>
        <%= f.label :is_active, "販売停止中" %><br>
      </div>
        <%= f.submit "新規登録", class: "btn btn-success" %>
      <% end %>
    </div>
  </div>
</div>
