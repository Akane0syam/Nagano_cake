<h4>注文履歴一覧</h4>
<table class="table">
  <thead class ="thead-light">
    <tr>
      <th></th>
      <th>購入日時</th>
      <th>購入者</th>
      <th>注文個数</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <% @orders.each do |order| %>
      <tr>
        <th></th>
        <th><%= order.created_at.strftime('%Y/%m/%d') %></th>
        <th><%= link_to order.customer.last_name+order.customer.first_name, admin_order_path(order) %></th>
        <th></th>
      </tr>
      <% end %>
    </tr>
  </tbody>
</table>