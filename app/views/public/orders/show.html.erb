<h4>注文履歴詳細</h4>

<h6>注文情報</h6>
<table class="table table-bordered table-condensed">
  <thead>
    <tr>
      <th>注文日</th>
      <th>配送先</th>
      <th>支払方法</th>
    </tr>
  </thead>
  <tbody>
   <tr>
    <td><%= @order.created_at.strftime('%Y/%m/%d') %></td>
    <td>
      〒<%= @order.postal_code %><br>
      <%= @order.address %><br>
      <%= @order.name %>
    
    </td>
    <td><%= @order.payment_method %></td>
   </tr>
  </tbody>
</table>

<h6>注文内容</h6>
<table class="table table-bordered table-condensed">
  <thead>
    <tr>
      <th>商品</th>
      <th>単価(税込)</th>
      <th>個数</th>
      <th>小計</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <th>
        <% @order.order_details.each do |order_detail| %>
          	<%= order_detail.item.name %><br>
        <% end %>
      </th>
      <th><%#= @order_detail.price%></th>
      <th><%#= @order.amount %></th>
      <th><%#= @order.subtotal %></th>
    </tr>
  </tbody>
</table>

<h6>請求情報</h6>
<table class="table table-bordered table-condensed">
   <thead>
    <tr>
      <th>商品合計</th>
      <th>配送料</th>
      <th>ご請求額</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <th><%= @order.total_payment %></th>
      <th><%= @order.shipping_cost %></th>
      <th></th>
    </tr>
  </tbody>
</table>